SERVER_PORT=8000
# "dev" or "prod"
ENV_TYPE=dev
WEBAPP_DOMAIN=localhost

# --- Database ---
POSTGRES_USER=root
POSTGRES_PASSWORD=secret
POSTGRES_DB=phototours_db

DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${WEBAPP_DOMAIN}:5432/${POSTGRES_DB}"

# --- Email (SMTP) ---

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_STARTTLS=true
SMTP_SSL=false
SMTP_SENDER_EMAIL=noreply@example.com
SMTP_SENDER_NAME=Your App

# --- API base ---
BASE_URL=http://127.0.0.1:8000
API_PREFIX=/br-general

# --- OAuth (Google) ---
# Создайте OAuth Client ID в Google Cloud Console и подставьте значения сюда:
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=change_me
OAUTH_GOOGLE_SCOPE="openid email profile"

# --- Auth / JWT ---
# Сгенерируйте:  python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change_me

# TTL для access-токена (минуты)
ACCESS_TOKEN_MINUTES=1440

# --- Frontend ---
FRONTEND_APP_URL=http://localhost:5173

# Подсказка для Google Console (Authorized redirect URI):
# http://127.0.0.1:8000/br-general/auth/google/callback