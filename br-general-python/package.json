{
  "name": "br-general-python",
  "version": "1.0.0",
  "description": "Python backend for brain100 project (FastAPI + Prisma)",
  "type": "module",
  "main": "app/run.py",
  "scripts": {
    "installAll": "python3 -m venv .venv && .venv/bin/pip install --upgrade pip && .venv/bin/pip install -r requirements.txt && PRISMA_CACHE_DIR=.venv/.prisma PATH=.venv/bin:$PATH .venv/bin/python -m prisma py fetch",
    "prisma:generate": "PRISMA_CACHE_DIR=.venv/.prisma PATH=.venv/bin:$PATH .venv/bin/python -m prisma generate",
    "prisma:migrate": "PRISMA_CACHE_DIR=.venv/.prisma PATH=.venv/bin:$PATH .venv/bin/python -m prisma migrate deploy",
    "prisma:reset": "PRISMA_CACHE_DIR=.venv/.prisma PATH=.venv/bin:$PATH .venv/bin/python -m prisma migrate reset --force --skip-generate",
    "start": "pnpm run prisma:generate && .venv/bin/python -m app.run",
    "py:lint": ".venv/bin/ruff check br-general-python",
    "py:lint:fix": ".venv/bin/ruff check --fix --exit-non-zero-on-fix br-general-python",
    "py:format": ".venv/bin/ruff format br-general-python",
    "type-check": ".venv/bin/mypy br-general-python"
  },
  "keywords": [
    "python",
    "fastapi",
    "prisma",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prisma": "^5.17.0",
    "ruff": "1.5.4"
  }
}
