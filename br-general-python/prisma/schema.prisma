generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid())
  email           String        @unique
  name            String?
  createdAt       DateTime      @default(now())
  hashed_password String
  sessions        TestSession[]
}

model Test {
  id          String        @id @default(cuid())
  title       String
  description String
  createdAt   DateTime      @default(now())
  questions   Question[]
  sessions    TestSession[]
}

model Question {
  id        String         @id @default(cuid())
  testId    String
  text      String
  type      QuestionType
  nextYesId String?
  nextNoId  String?
  createdAt DateTime       @default(now())
  options   AnswerOption[]
  answers   GivenAnswer[]
  test      Test           @relation(fields: [testId], references: [id], onDelete: Cascade)
}

model AnswerOption {
  id         String        @id @default(cuid())
  questionId String
  text       String
  isCorrect  Boolean?
  createdAt  DateTime      @default(now())
  question   Question      @relation(fields: [questionId], references: [id], onDelete: Cascade)
  answers    GivenAnswer[]
}

model TestSession {
  id         String        @id @default(cuid())
  testId     String
  userId     String
  createdAt  DateTime      @default(now())
  finishedAt DateTime?
  answers    GivenAnswer[]
  test       Test          @relation(fields: [testId], references: [id], onDelete: Cascade)
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GivenAnswer {
  id             String        @id @default(cuid())
  sessionId      String
  questionId     String
  answerOptionId String?
  freeText       String?
  createdAt      DateTime      @default(now())
  answerOption   AnswerOption? @relation(fields: [answerOptionId], references: [id])
  question       Question      @relation(fields: [questionId], references: [id], onDelete: Cascade)
  session        TestSession   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model EmailLog {
  id        String   @id @default(cuid())
  to        String
  subject   String
  template  String?
  body      String?
  status    String
  error     String?
  createdAt DateTime @default(now())
}

enum QuestionType {
  RADIO
  CHECKBOX
  TEXT
}
