# Database connection
DATABASE_URL=DATABASE_URL=postgresql://root:secret@postgres:5432/postgres

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Model configuration
# text-embedding-004 works best for multilingual data
EMBEDDING_MODEL=text-embedding-004

# LLM model used for generation (chat responses)
# gemini-2.5-flash is fast and balanced for RAG
LLM_MODEL=gemini-2.5-flash

# RAG parameters

# Number of top vector matches to retrieve for each query
RAG_TOP_K=3

# Minimum cosine similarity threshold (0.0â€“1.0)
# Lower = more results, Higher = stricter match
RAG_SCORE_THRESHOLD=0.10

# Text chunking parameters: each chunk ~1000 characters with 180-character overlap
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=180